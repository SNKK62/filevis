{
  "name": "localview",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.json",
    "build": "npm run build:client && npm run build:server",
    "dev": "tsx bin/localview.ts --root . --open false",
    "start": "node ./dist-server/bin/localview.js --root . --open false"
  },
  "bin": {
    "localview": "./dist-server/bin/localview.js"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "express": "^4.19.2",
    "mime-types": "^2.1.35",
    "open": "^10.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "tsx": "^4.16.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.0"
  }
}

